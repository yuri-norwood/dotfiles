" display current mode (insert/normal)
set showmode

" don't show matching parens, braces, etc
set noshowmatch

" display row/column info
set ruler

" use 8 width hard tabs
set autoindent
set tabstop=8
set softtabstop=0
set shiftwidth=8
set noexpandtab

" display all error messages
set verbose

" enable horizontal scrolling
set leftright

" use extended regular expressions
set extended

" case-insensitive search, unless an uppercase letter is used
set iclower

" incremental search
set searchincr

" print helpful messages (eg, 4 lines yanked)
set report=1
