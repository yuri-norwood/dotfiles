# vim: set ft=c:

---

# This file defines configurations on how to lint yaml files
extends: default

rules:
  # This rule forbids non-explictly typed truthy values other than true/false
  truthy:
    check-keys: false
    allowed-values:
      - "true"
      - "false"

  # 80 chars should be enough, but don't fail if a line is longer
  line-length: disable
